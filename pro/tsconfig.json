{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "outDir": "./dist",
        "sourceMap": true,
        // This would stop errors in libraries from for example isolatedModules - currently none
        // But its set to false otherwise we don't get errors from global.d.ts
        "skipLibCheck": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "lib": [
            "dom",
            "esnext"
           ],
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}